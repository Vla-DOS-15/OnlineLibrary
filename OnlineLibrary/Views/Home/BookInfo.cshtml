@{
    ViewData["Title"] = "Інформація про книгу";
}

<div >
	<div class="section-title">
		<h2 style="text-align: center;">Перегляд книги</h2>
	</div>
        <input type="hidden" value="@ViewBag.BookId" name="BookId" />
        <div class="content-i" >

             <form method="get">
                @{
                    foreach (var book in ViewBag.Books)
                    {
                        <img class="img-thumbnail" src="@book.ImgRef" alt="@book.Name" />
                        <h2>@book.Name  @book.YearCreated</h2>     
                        <br style="line-height: 10"/>
                        <hr />
                        <br style="line-height: 10"/>
                    }

                    @foreach (string text in ViewBag.Data)
                    {
                        <p>@text</p>
                    }
                }
             </form>
        </div>

</div>
